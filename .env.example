# =====================================================
# Multi-Tenant Manager Service - Environment Variables
# =====================================================

# Server Configuration
PORT=3001
NODE_ENV=development

# Global Database (Tenant Registry)
# This database stores metadata for all tenants
GLOBAL_DATABASE_URL=postgresql://postgres:password@localhost:5432/twenty_global

# PostgreSQL Admin Credentials (for creating tenant databases)
POSTGRES_ADMIN_USER=postgres
POSTGRES_ADMIN_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Source Database (Template for tenant databases)
# This is the database whose schema will be copied to new tenants
SOURCE_DATABASE_NAME=twenty

# JWT Configuration
JWT_SECRET=change-this-to-a-strong-random-secret-in-production
JWT_EXPIRES_IN=24h

# Connection Pooling
MAX_CONNECTIONS_PER_TENANT=10
POOL_IDLE_TIMEOUT=1800000
MAX_TOTAL_CONNECTIONS=10000

# Multi-tenancy Configuration
ENABLE_MULTI_TENANCY=true
TENANT_DB_PREFIX=twenty_tenant_

# Admin Access
SUPER_ADMIN_KEY=change-this-to-a-strong-random-key-in-production

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Optional: Docker Configuration (if using Docker for pg_dump)
USE_DOCKER_FOR_SCHEMA_COPY=false
DOCKER_POSTGRES_CONTAINER=twenty-db
